@{
    ViewData["Title"] = "Home Page";
}

        <div class="row">
            <div class="col-4">
                <body>
                    <h1 class="display-5" style="text-align: left;">Welcome</h1>
                    <p style="text-align: left;">Make the right choice on your potential new home, <a href="https://docs.microsoft.com/aspnet/core">Crime Statistics of the community of your potential new home</a>.</p>
                </body>
            </div>
            <div class="col-8">
                <body>
                    <h1 class="display-5" style="text-align: left;">Enter a city you want to look up:</h1>
                    <form action="Crime/CrimeStats" method="get">
                        <label for="cityName">Enter a city name: </label>
                        <input type="text" id="cityName" name="cityName" required><br><br>

                        <label for= "stateAbbrev">Select a state: </label>
                        <select name= "stateAbbrev" id="stateAbbrev" required>
                            <option value="" disabled>Choose a state</option>
                        </select>
                        <br><br>
                        <input type="submit" value="Submit">
                    </form>
                </body>
            </div>
        <div class="row">
            <div class="col-4">
                <body>
                    <h1 class="display-5" style="text-align: left;">Safest States</h1>
                    <div class= "text-left">
                        <table id= "safestStatesTable" border="1">
                            <thead>
                                <tr>
                                    <th>States</th>
                                    <th>Violent Crimes</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>
                    </div>
                </body>
            </div>  
        </div>

@section Scripts
{
    <script type="text/javascript" src="~/js/site.js"></script>
}

